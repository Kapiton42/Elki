= form_for @do_not_stop do |f|
  - if @do_not_stop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@do_not_stop.errors.count, "error")} prohibited this do_not_stop from being saved:"
      %ul
        - @do_not_stop.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :station
    = f.select :station_id, Station.all.map {|e| [e.name, e.id]}
  .field
    = f.label :graphik
    = f.select :graphik_id, Graphik.all.map {|e| ["Begin: " + e.station_begin.name + ", End:" + e.station_end.name, e.id]}
  .actions
    = f.submit 'Save'
