= form_for @price do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this price from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :zones
    = f.number_field :zones
  .field
    = f.label :Price_of_ticket
    = f.number_field :price_of_ticket
  .actions
    = f.submit 'Save'
