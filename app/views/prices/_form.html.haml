= form_for @price do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this price from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :zones
    = f.number_field :zones
  .field
    = f.label :priceOfTicket
    = f.number_field :priceOfTicket
  .actions
    = f.submit 'Save'
