= form_for @day do |f|
  - if @day.errors.any?
    #error_explanation
      %h2= "#{pluralize(@day.errors.count, "error")} prohibited this day from being saved:"
      %ul
        - @day.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :graphik
    = f.select :graphik_id, Graphik.all.map {|e| ["Begin: " + e.station_begin.name + ", End:" + e.station_end.name, e.id]}
  .field
    = f.label :monday
    = f.check_box :monday
  .field
    = f.label :tuesday
    = f.check_box :tuesday
  .field
    = f.label :wed
    = f.check_box :wed
  .field
    = f.label :thursday
    = f.check_box :thursday
  .field
    = f.label :friday
    = f.check_box :friday
  .field
    = f.label :saturday
    = f.check_box :saturday
  .field
    = f.label :sunday
    = f.check_box :sunday
  .actions
    = f.submit 'Save'
