= form_for @station do |f|
  - if @station.errors.any?
    #error_explanation
      %h2= "#{pluralize(@station.errors.count, "error")} prohibited this station from being saved:"
      %ul
        - @station.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :tarifZone
    = f.number_field :tarif_zone
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
